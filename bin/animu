#!/usr/bin/env bash

v_dir="${1}"

if [[ ! -d "${v_dir}/-" ]]; then
  mkdir "${v_dir}/-"
fi

for i in "${v_dir}/"*; do
  i="${i##*/}"
  if [[ -f "${v_dir}/${i}" && ! -f "${v_dir}/-/${i}" ]]; then
    ffmpeg -i "${v_dir}/${i}" -c:v libx264 -vf scale=480x270 -c:a aac -strict -2 "${v_dir}/-/${i}"
  fi
done
